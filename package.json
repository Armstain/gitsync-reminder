{
  "name": "git-pull-reminder",
  "displayName": "Git Pull Reminder",
  "description": "Smart Git pull reminders with configurable intervals and status bar integration",
  "version": "1.2.0",
  "author": "Nazmul Hossain Adnan",
  "publisher": "armstain",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "keywords": ["git", "pull", "reminder", "sync", "version control"],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/git-pull-reminder.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/git-pull-reminder/issues"
  },
  "homepage": "https://github.com/your-username/git-pull-reminder#readme",
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitPullReminder.checkCommits",
        "title": "Git Pull Reminder: Check for Remote Commits",
        "icon": "$(sync)"
      },
      {
        "command": "gitPullReminder.pullNow",
        "title": "Git Pull Reminder: Pull Now",
        "icon": "$(repo-pull)"
      },
      {
        "command": "gitPullReminder.toggleAutoCheck",
        "title": "Git Pull Reminder: Toggle Auto Check",
        "icon": "$(watch)"
      }
    ],
    "configuration": {
      "title": "Git Pull Reminder",
      "properties": {
        "gitPullReminder.checkInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Check interval in minutes (1-60)"
        },
        "gitPullReminder.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic checking for remote commits"
        },
        "gitPullReminder.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status in status bar"
        },
        "gitPullReminder.notificationLevel": {
          "type": "string",
          "enum": ["info", "warning", "error"],
          "default": "info",
          "description": "Notification level for pull reminders"
        },
        "gitPullReminder.watchedBranches": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["main", "master", "develop"],
          "description": "Only check for commits on these branches (empty array = all branches)"
        },
        "gitPullReminder.smartTiming": {
          "type": "boolean",
          "default": true,
          "description": "Pause checks when actively typing to avoid interruptions"
        },
        "gitPullReminder.conflictDetection": {
          "type": "boolean",
          "default": true,
          "description": "Check for potential merge conflicts before suggesting pull"
        },
        "gitPullReminder.gitTimeout": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "Git command timeout in seconds (5-120)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'Compilation complete'",
    "package": "vsce package",
    "test": "echo 'Test script'"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0"
  }
}
